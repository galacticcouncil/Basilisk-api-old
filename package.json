{
  "name": "hydra-template",
  "private": "true",
  "version": "0.0.0",
  "description": "GraphQL server and Substrate indexer. Generated with â™¥ by Hydra-CLI",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "migrate:lbp": "ts-node ./migrations/01_lbp.ts",
    "migrate:xyk": "ts-node ./migrations/02_xyk.ts",
    "migrate:test:e2e": "ts-node ./migrations/04_e2e.ts",
    "extrinsic:xyk:buy": "npm run extrinsic xyk buy",
    "extrinsic:xyk:addLiquidity": "npm run extrinsic xyk addLiquidity",
    "extrinsic:lbp:buy": "npm run extrinsic lbp buy",
    "extrinsic": "ts-node ./migrations/extrinsics/extrinsics.ts",
    "processor:typegen": "hydra-typegen typegen manifest.yml",
    "processor:codegen": "hydra-cli codegen",
    "processor:db:create": "hydra-cli db:create",
    "processor:db:drop": "hydra-cli db:drop",
    "processor:db:create-migration": "hydra-cli db:create-migration",
    "processor:db:migrate": "hydra-cli db:migrate",
    "processor:db:revert": "hydra-cli db:revert",
    "processor:db:reset": "hydra-cli db:drop && hydra-cli db:create && hydra-processor migrate && hydra-cli db:migrate",
    "processor:migrate": "hydra-processor migrate",
    "processor:start": "hydra-processor run",
    "processor:query-node:start": "node ./lib/generated/server.js",
    "processor:clean-and-setup": "./scripts/dev/clean-and-setup.sh",
    "processor:test": "mocha -r ts-node/register src/**/**.spec.ts src/**/**/**.spec.ts",
    "processor:test:watch": "mocha -r ts-node/register --watch --watch-files src/mappings/**.ts,utils/**.ts mappings/**.spec.ts src/utils/**.spec.ts",
    "processor:gen-chain-types": "./scripts/dev/gen-chain-types.sh",
    "indexer:start": "docker-compose -f ./indexer/docker-compose.yml up",
    "indexer:stop": "docker-compose -f ./indexer/docker-compose.yml down",
    "testnet:start": "./scripts/dev/start-testnet.sh",
    "testnet:stop": "./scripts/dev/stop-testnet.sh",
    "testnet:restart": "npm run testnet:stop && npm run testnet:start",
    "test": "npm run test:unit & npm run test:e2e",
    "test:e2e": "mocha --timeout 10000 -r ts-node/register e2e/**/**.spec.ts",
    "test:unit": "mocha --timeout 10000 -r ts-node/register src/**/**.spec.ts src/**/**/**.spec.ts"
  },
  "dependencies": {
    "@polkadot/api": "6.8.1",
    "@polkadot/keyring": "6.8.1",
    "@polkadot/types": "6.5.1",
    "@subsquid/hydra-common": "^5.0.0-alpha.12",
    "@subsquid/hydra-processor": "^5.0.0-alpha.12",
    "@subsquid/openreader": "^0.2.1",
    "@types/sinon": "^10.0.6",
    "bignumber.js": "^9.0.1",
    "inflected": "^2.1.0",
    "lodash": "^4.17.21",
    "simple-linear-scale": "^1.0.1",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.39",
    "typeorm-typedi-extensions": "^0.4.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@polkadot/typegen": "6.8.1",
    "@subsquid/hydra-cli": "5.0.0-alpha.12",
    "@subsquid/hydra-typegen": "5.0.0-alpha.12",
    "@types/chai": "^4.2.21",
    "@types/fs-extra": "^9.0.13",
    "@types/inflected": "^1.1.29",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^9.0.0",
    "@types/pg": "^8.6.1",
    "chai": "^4.3.4",
    "expect": "^27.3.1",
    "fs-extra": "^10.0.0",
    "mocha": "^9.1.0",
    "polkadot-launch": "^1.9.0",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "~4.4.4"
  }
}
